[settings]
    os=Linux
    arch=x86_64
    compiler=gcc
    compiler.cppstd=20
    compiler.version=12
    # libstdc++11 CANNOT be used due to Boost not being compatible with its ABI and causing linking errors
    # More info: 
    # https://docs.conan.io/en/latest/howtos/manage_gcc_abi.html
    # https://gcc.gnu.org/onlinedocs/libstdc++/manual/using_dual_abi.html
    compiler.libcxx=libstdc++11
    build_type=Release
[options]
[buildenv]
